#: import NoTransition kivy.uix.screenmanager.NoTransition
#: import ProgressBar kivy.uix.progressbar
#: import Widget kivy.uix.widget

ScreenManagement:
    transition: NoTransition()
    MainScreen:
    LoadingScreen:
    ResultScreen:

<MainScreen>
    name: "Main"
    FloatLayout:

        Button:
            on_press: app.root.current = "Loading Screen"
            on_release: root.start_process()
            text: "Start Process"
            size_hint: 0.7, 0.15
            pos: root.center_x - (self.width/2), root.y + self.height
            background_normal: ''
            background_down:
            background_color: .25, .75, .04, 1
            font_size: 50

        Button:
            size_hint: 0.335, 0.3
            pos: root.x + (0.3 * self.width), root.top - self.height - 80
            on_press: root.select("COPART")
            Image:
                source: 'copart.png'
                pos: root.x + (0.3 * self.parent.width), root.top - self.parent.height - 80
                size: 150, 150
                allow_stretch: True

        Label:
            text: app.choice + " is selected"

<LoadingScreen>
    name: "Loading Screen"
    FloatLayout:

        Button:
            text: "Go Back to Main Screen"
            on_release: app.root.current = "Main"
            size_hint: 0.4, 0.05
            pos: root.x, root.top - self.height

        Button:
            text: "Process is completed"
            on_release: app.root.current = "Results"
            size_hint: 0.40, 0.05
            pos: (2 * root.center_x) - self.width, root.top - self.height

        Image:
            source: "progress.png"
            size_hint: 0.5, 0.5
            pos: root.center_x - 225, root.center_y - 200
            allow_stretch: True

<ResultScreen>
    name: "Results"
    FloatLayout:

        Button:
            text: "Go Back to Main Screen"
            on_release: app.root.current = "Main"
            size_hint: 0.4, 0.05
            pos: root.x, root.top - self.height
