#: import NoTransition kivy.uix.screenmanager.NoTransition
#: import ProgressBar kivy.uix.progressbar
#: import Widget kivy.uix.widget
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton
#: import Popup kivy.uix.popup
#: import main GUI

<Manager>:
    id: screen_manager

    main_screen: mainS
    loading_screen: loadingS
    results_screen: resultsS

    MainScreen:
        id: mainS
        name: "Main Screen"
        manager: screen_manager

    LoadingScreen:
        id: loadingS
        name: "Loading Screen"
        manager: screen_manager

    ResultScreen:
        id: resultsS
        name: "Results Screen"
        manager: screen_manager

    RetrainingScreen:
        id: retrain
        name: "Retrain Screen"
        manager: screen_manager


<MainScreen>
    FloatLayout:

        # Start Button
        Button:
            on_release: root.start_process()
            on_press: root.manager.current = "Loading Screen"
            text: "Start"
            font_size: 16
            size_hint: 0.6, 0.12
            pos: root.center_x - (self.width/2), root.y + self.height
            background_normal: ''
            background_down:
            background_color: .25, .75, .04, 1
            font_size: 50

        # COPART BUTTON
        Button:
            size_hint: 0.335, 0.3
            pos: root.x + (0.3 * self.width), root.top - self.height - 80
            on_press: root.change_label("Copart")
            Image:
                source: 'Data/copart.png'
                pos: root.x + (0.3 * self.parent.width), root.top - self.parent.height - 80
                size: 300, 300
                allow_stretch: True

        # IAAI BUTTON
        Button:
            id: IAAI_Button
            size_hint: 0.335, 0.3
            pos: root.x + (1.7 * self.width), root.top - self.height - 80
            on_press: root.change_label("IAAI")
            Image:
                source: 'Data/iaai.png'
                pos: root.x + (1.7 * self.parent.width), root.top - self.parent.height - 80
                size: 300, 300
                allow_stretch: True

        Label:
            text: root.selected_auction

<LoadingScreen>
    FloatLayout:

        Button:
            text: "Cancel"
            size_hint:0.30, 0.1
            pos: root.center_x - (self.width/2), 100
            background_color: 300, 0.5, 0, .4
            on_press: root.cancel()

        Button:
            text: "Process is completed"
            on_press: root.test_continue()
            size_hint: 0.40, 0.1
            pos: (2 * root.center_x) - self.width, root.top - self.height

        Image:
            source: "Data/progress.png"
            size_hint: 0.5, 0.5
            pos: root.center_x - (self.width/2), root.center_y - (self.height/2)
            allow_stretch: True

<ResultScreen>
    orientation: "vertical"

    padding: 10
    spacing: 10

    FloatLayout:

        Button:
            text: "Continue"
            on_press: root.continue_()
            size_hint: 0.3, 0.1
            pos: root.x, root.top - root.height


        Label:
            text: "This are your results"
            size_hint: 0.3, 0.1
            pos: root.center_x - (self.width/2), root.top - 200
            font_size: 70

        Image:
            source: root.image_to_display
            size_hint: 0.5, 0.5
            pos: root.center_x - (self.width/2), root.center_y - (self.height/4)


<RetrainingScreen>
    FloatLayout:

        Image:
            source: "Data/progress.png"
            size_hint: 0.5, 0.5
            pos: root.center_x - (self.width/2), root.center_y - (self.height/2)
            allow_stretch: True



